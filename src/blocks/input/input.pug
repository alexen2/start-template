mixin input(data)
	div.input&attributes(attributes)
		label(for!=data.name class!=data.label_hide)!=data.label_text
		
		div.input__wrapper
			if data.icon_l
				+icon(data.icon_l)

			input(type=data.type name=data.name id!=data.name value=data.value placeholder=data.placeholder)

			if data.icon_r
				+icon(data.icon_r)